{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/e2e/jest-e2e.setup.ts"],
  "testTimeout": 30000,
  "verbose": true,
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/**/*.dto.ts",
    "!src/**/*.entity.ts",
    "!src/**/*.interface.ts",
    "!src/**/*.type.ts",
    "!src/main.ts"
  ]
}
